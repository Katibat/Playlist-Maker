<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="mainLinearLayout">
        <item name="android:background">@color/dark_theme_item</item>
    </style>

    <style name="settingsLinearLayout" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:background">@color/dark_theme_item</item>
    </style>

    <style name="common_style" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:background">@color/dark_theme_item</item>
        <item name="android:backgroundTint">@color/dark_theme_item</item>
    </style>

    <style name="mainButtonStyle">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/dark_theme_item</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_22</item>
        <item name="cornerRadius">@dimen/icon_16</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/icon_10</item>
        <item name="iconTint">@color/dark_theme_item</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="mainTextStyle">
        <item name="android:text">@string/title</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_22</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="settingsFrame">
        <item name="android:paddingTop">@dimen/icon_21</item>
        <item name="android:paddingBottom">@dimen/icon_21</item>
    </style>

    <style name="settingsButtonText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_16</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:tint">@color/white</item>
    </style>

    <style name="Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">@color/dark_theme_item</item>
        <item name="android:iconTint">@color/white</item>
    </style>

    <style name="ToolbarTextAppearance">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:shadowColor">@color/white</item>
        <item name="android:background">@color/dark_theme_item</item>
    </style>

    <style name="ToolbarTextAppearance.Title">
        <item name="android:textSize">@dimen/text_22</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:background">@color/dark_theme_item</item>
    </style>

    <style name="MyToolbar">
        <item name="theme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="android:background">@color/dark_theme_item</item>
        <item name="android:iconTint">@color/white</item>
        <item name="android:textColor" tools:ignore="DuplicateDefinition">@color/white</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight" tools:ignore="NewApi">500</item>
    </style>

    <style name="switchTheme">
        <item name="android:thumbTint">@color/switch_thumb_dark</item>
        <item name="android:trackTint">@color/switch_track_dark</item>
        <item name="android:layout_marginEnd">@dimen/icon_6</item>
        <item name="android:paddingBottom">@dimen/icon_7</item>
    </style>

    <style name="searchEditText">
        <item name="android:paddingStart">@dimen/icon_13</item>
        <item name="android:paddingEnd">@dimen/icon_12</item>
        <item name="android:paddingBottom">8.5dp</item>
        <item name="android:paddingTop">8.5dp</item>
        <item name="android:drawablePadding">@dimen/icon_9</item>
        <item name="android:lines">1</item>
        <item name="android:maxLength">40</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:inputType">text</item>
        <item name="android:textColorHint">@color/dark_theme_item</item>
        <item name="android:iconTint">@color/dark_theme_item</item>
        <item name="android:textColor">@color/dark_theme_item</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="searchCloseEditText">
        <item name="android:visibility">gone</item>
        <item name="android:tint">@color/dark_theme_item</item>
    </style>

    <style name="recyclerView">
        <item name="android:background">@color/dark_theme_item</item>
    </style>

    <style name="track_name">
        <item name="android:text">TextView</item>
        <item name="android:textSize">@dimen/text_16</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lines">1</item>
    </style>

    <style name="track_artist">
        <item name="android:text">TextView</item>
        <item name="android:textSize">@dimen/text_11</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lines">1</item>
    </style>

    <style name="track_icon_arrow">
        <item name="android:tint">@color/white</item>
    </style>

    <style name="track_separator">
        <item name="android:tint">@color/white</item>
    </style>

    <style name="track_cardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:backgroundTint">@color/dark_theme_item</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="search_noConnectionImage">
        <item name="android:src">@drawable/search_no_connection_dark</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="search_nothingFoundImage">
        <item name="android:src">@drawable/search_nothing_found_dark</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="search_errorMessage">
        <item name="android:textSize">@dimen/text_19</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:gravity">center</item>
        <item name="android:lineHeight" tools:ignore="NewApi">24dp</item>
        <item name="android:textFontWeight" tools:ignore="NewApi">400</item>
    </style>

    <style name="search_buttonUpdate">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:lineHeight">@dimen/icon_16</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:paddingStart">@dimen/icon_14</item>
        <item name="android:paddingEnd">@dimen/icon_14</item>
        <item name="android:paddingTop">@dimen/icon_10</item>
        <item name="android:paddingBottom">@dimen/icon_10</item>
        <item name="android:visibility">gone</item>
        <item name="cornerRadius">54dp</item>
    </style>

    <style name="tvSearchHistory">
        <item name="android:textSize">@dimen/text_19</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="tvTittleHistory">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_19</item>
        <item name="android:gravity">center</item>
        <item name="android:visibility">gone</item>
    </style>

    // AUDIO PLAYER

    <style name="audio_player_track_name">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_22</item>
    </style>

    <style name="audio_player_track_artist">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="audio_player_time_track">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="audio_player_tittles">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="audio_player_track_content" >
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="audio_player_button_play" >
        <item name="android:src">@drawable/audio_player_play</item>
        <item name="android:tint">@color/white</item>
    </style>

    <style name="audio_player_button_add" >
        <item name="android:src">@drawable/audio_player_add_track_dark</item>
    </style>

    <style name="media_tablayout" >
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="background">@color/dark_theme_item</item>
        <item name="android:backgroundTint">@color/dark_theme_item</item>
        <item name="tabSelectedTextColor">@color/white</item>
        <item name="tabIndicatorColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAlignment">center</item>
        <item name="tabIndicator">@drawable/tablayout_indicator</item>
        <item name="tabTextAppearance">@style/MyCustomTextAppearance</item>
    </style>

    <style name="MyCustomTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
    </style>

    <style name="media_fragment" >
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="background">@color/dark_theme_item</item>
        <item name="android:textSize">19sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="bottom_navigation_view" >
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/dark_theme_item</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textAlignment">center</item>
        <item name="itemIconTint">@drawable/bottom_navigation_tab_bar_dark</item>
        <item name="itemTextColor">@drawable/bottom_navigation_tab_bar_dark</item>
    </style>

    <style name="playlist_edit_text">
        <item name="android:textSize">@dimen/text_16</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:imeOptions">actionDone|flagNoExtractUi</item>
    </style>

    <style name="playlist_button_create">
        <item name="android:textSize">@dimen/text_16</item>
        <item name="fontFamily">@font/ys_display</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:imeOptions">actionDone|flagNoExtractUi</item>
        <item name="android:background">@drawable/playlist_button_create</item>
        <item name="backgroundTint">@color/playlist_create_playlist</item>
    </style>

    <style name="PlaylistHintTextAppearance">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/text_16</item>
    </style>

    <style name="PlaylistEditTextAppearance">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/text_16</item>
    </style>

    <!--    <style name="ThemeOverlay.AppTheme.TextInputEditText.Outlined" parent="">-->
    <!--        <item name="colorControlActivated">@color/system_PM</item>-->
    <!--    </style>-->

    <style name="ThemeOverlay.App.MaterialAlertDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="colorPrimary">@color/system_PM</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>
    </style>

    <style name="playlist_hint" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textSize">@dimen/text_12</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="fontWeight">400</item>
        <item name="boxStrokeColor">@color/playlist_edit_text_outline</item>
        <item name="android:textColorHint">@color/system_PM</item>
        <item name="hintTextColor">@color/system_PM</item>
        <item name="android:hint">@string/playlist_name</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:letterSpacing">0.03</item>
        <item name="boxCornerRadiusBottomEnd">4dp</item>
        <item name="boxCornerRadiusBottomStart">4dp</item>
        <item name="boxCornerRadiusTopEnd">4dp</item>
        <item name="boxCornerRadiusTopStart">4dp</item>
    </style>

    <style name="playlist_view_big_text">
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="playlist_view_small_text">
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="artist_count_track">
        <item name="android:textColor"> @color/white</item>
        <item name="android:textSize">11sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="header_new_playlist">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="back_arrow_from_playlist_creation">
        <item name="android:tint">@color/white</item>
    </style>

    <style name="cardview_create_new_playlist">
        <item name="android:background">@color/dark_theme_item</item>
        <item name="android:backgroundTint">@color/dark_theme_item</item>
    </style>

    <style name="bottom_sheet">
        <item name="android:background">@drawable/rounded_bottom_sheet</item>
        <item name="android:backgroundTint">@color/dark_theme_item</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="title_bottom_sheet">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">19sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="playlist_details_bottom_sheet">
        <item name="android:background">@drawable/bottom_sheet_small_handler</item>
        <item name="android:backgroundTint">@color/dark_theme_item</item>
    </style>

    <style name="button_create_new_playlist">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/dark_theme_item</item>
    </style>

    <style name="linerLayout_create_new_playlist" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:background">@color/dark_theme_item</item>
    </style>

    <style name="playlist_details_text">
        <item name="android:textColor">@color/dark_theme_item</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/ys_display_bold</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">marquee</item>
    </style>

    <style name="playlist_details_bottom_sheet_menu">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="android:clickable">true</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="DialogStyle" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="android:background">@color/white</item>
        <item name="materialAlertDialogBodyTextStyle">@style/MessageTextStyle</item>
        <item name="materialAlertDialogTitleTextStyle">@style/TitleTextStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style>

    <style name="TitleTextStyle" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="MessageTextStyle" parent="MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="android:textColor">@color/black</item>
    </style>


    <style name="NegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/system_PM</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/system_PM</item>
    </style>

    <style name="btn_botton_sheet_menu">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">61dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="android:clickable">true</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16dp</item>
    </style>
</resources>