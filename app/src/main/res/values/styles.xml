<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="mainLinearLayout">
        <item name="android:background">@color/system_PM</item>
    </style>

    <style name="settingsLinearLayout" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:background">@color/white</item>
    </style>

    <style name="mainButtonStyle">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_22</item>
        <item name="cornerRadius">@dimen/icon_16</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/icon_10</item>
        <item name="iconTint">@color/black</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="mainTextStyle">
        <item name="android:text">@string/title</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_22</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="settingsFrame">
        <item name="android:paddingTop">@dimen/icon_21</item>
        <item name="android:paddingBottom">@dimen/icon_21</item>
    </style>

    <style name="settingsButtonText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_16</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:tint">@color/light_gray</item>
    </style>

    <style name="Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="ToolbarTextAppearance">
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:shadowColor">@color/black</item>
    </style>

    <style name="ToolbarTextAppearance.Title">
        <item name="android:textSize">@dimen/text_22</item>
    </style>

    <style name="MyToolbar">
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark</item>
        <item name="android:background">@color/white</item>
        <item name="android:elevation">@dimen/icon_4</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight" tools:ignore="NewApi">500</item>
    </style>

    <style name="switchTheme">
        <item name="android:thumbTint">@color/gray</item>
        <item name="android:trackTint">@color/light_gray</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:layout_marginEnd">@dimen/icon_6</item>
        <item name="android:paddingBottom">@dimen/icon_7</item>
    </style>

    <style name="searchEditText">
        <item name="android:paddingStart">@dimen/icon_13</item>
        <item name="android:paddingEnd">@dimen/icon_12</item>
        <item name="android:paddingBottom">8.5dp</item>
        <item name="android:paddingTop">8.5dp</item>
        <item name="android:drawablePadding">@dimen/icon_9</item>
        <item name="android:lines">1</item>
        <item name="android:maxLength">40</item>
        <item name="android:backgroundTint">@color/switch_track</item>
        <item name="android:inputType">text</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="searchCloseEditText">
        <item name="android:visibility">gone</item>
        <item name="android:src">@drawable/close_vector</item>
    </style>

</resources>